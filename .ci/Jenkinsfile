pipeline {
  agent any

  tools {
    nodejs 'NodeJS 18.16'
  }

  stages {
    stage('SonarQube Analysis') {
      steps {
        script {
          def scannerHome = tool 'SonarQube Scanner 4.8';

          withSonarQubeEnv('rafiandria23') {
            sh "${scannerHome}/bin/sonar-scanner -Dsonar.qualitygate.wait=true"
          }
        }
      }
    }
  }
}
